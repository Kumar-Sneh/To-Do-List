<%- include("header") -%>
  <div class="navbar">
    <a href="/"><i class="icon fas fa-home fa-2x"></i></a>
  </div>
  <div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="list_box" id="heading">
          <h2>Lists</h2>
        </div>

        <div class="list_box">
          <% Lists.forEach(function(List){ %>
            <form action="/delete-list" method="post">
              <div class="item">
                <input type="checkbox" name="checkbox" value="<%= List._id %>" onchange="this.form.submit()"></input>
                <p><a href="<%="/lists/" + List.name %>"><%= List.name %></a></p>
              </div>
            </form>
            <% }); %>

            <form class="item" action="/add-list" method="post">
              <input class="list_input" type="text" name="newList" placeholder="New List" autocomplete="off"></input>
              <button class="list_button" type="submit">+</button>
            </form> 
          </div>
      </div>

      <div class="center col-md-6">
        <div class="box" id="heading">
          <h1><%= Title %></h1>
        </div>

        <div class="box">
          <% Items.forEach(function(Item){ %>
            <form action="/delete" method="post">
              <div class="item">
                <input type="checkbox" name="checkbox" value="<%= Item._id %>" onchange="this.form.submit()"></input>
                <p><%= Item.name %></p>
              </div>
              <input type="hidden" name="title" value="<%= Title %>"></input>
            </form>
            <% }); %>

            <form class="item" action="/" method="post">
              <input class="item_input" type="text" name="newItem" placeholder="New Item" autocomplete="off"></input>
              <button type="submit" name="title" value="<%= Title %>">+</button>
            </form>
          </div>
        </div>
  </div>
<%- include("footer") -%>
